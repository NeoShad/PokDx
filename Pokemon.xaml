<Page x:Class="WpfApp5.Pokemon"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Purple"
      Title="Pokemon">

    <Grid>
        <Image HorizontalAlignment="Left" x:Name="pokePic" Height="196" Margin="12,14,0,0" VerticalAlignment="Top" Width="204"/>
        <TextBlock HorizontalAlignment="Left" x:Name="pokeName" Margin="39,231,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" x:Name="pokeWeight"  Margin="39,263,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Page>
